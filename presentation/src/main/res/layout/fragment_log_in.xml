<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.LogInFragment">

    <TextView
        android:id="@+id/tv_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:text="Вход в личный кабинет"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_log_in"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="144dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/grey_1"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_log_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="Поиск работы"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="16sp"
            android:layout_gravity="start|top"/>
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginTop="59dp"
            android:background="@drawable/bg_rounded_edtv"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/bg_rounded_dark_blue_bt"
                android:text="Продолжить"
                android:textColor="@color/grey_4"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/sf_pro_display_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Войти с паролем"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:gravity="center"/>
            
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_hiring"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/grey_1"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_log_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="Поиск сотрудников"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_display_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="51dp"
            android:layout_marginStart="16dp"
            android:text="Размещение вакансий и доступ к базе резюме"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_display_medium"/>
        
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:layout_marginTop="85dp"
            android:layout_marginHorizontal="16dp"
            android:text="Я ищу сотрудников"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:background="@drawable/bg_rounded_green_bt"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>