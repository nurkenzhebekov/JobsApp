<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".PasswordFragment">

    <TextView
        android:id="@+id/tv_send_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:layout_marginStart="15dp"
        android:text="Отправили код на"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="example@mail.ru"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintTop_toTopOf="@id/tv_send_to"
        app:layout_constraintBottom_toBottomOf="@id/tv_send_to"
        app:layout_constraintStart_toEndOf="@id/tv_send_to"/>

    <TextView
        android:id="@+id/tv_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:text="Напишите его, чтобы подтвердить, что это\nвы, а не кто-то другой входит в личный\nкабинет"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_send_to"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtv_password_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_rounded_edtv"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_manual"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtv_password_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded_edtv"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/edtv_password_1"
        app:layout_constraintBottom_toBottomOf="@id/edtv_password_1"
        app:layout_constraintStart_toEndOf="@id/edtv_password_1"/>

    <EditText
        android:id="@+id/edtv_password_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded_edtv"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/edtv_password_2"
        app:layout_constraintBottom_toBottomOf="@id/edtv_password_2"
        app:layout_constraintStart_toEndOf="@id/edtv_password_2"/>

    <EditText
        android:id="@+id/edtv_password_4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded_edtv"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/edtv_password_3"
        app:layout_constraintBottom_toBottomOf="@id/edtv_password_3"
        app:layout_constraintStart_toEndOf="@id/edtv_password_3"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="15dp"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@color/grey_4"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:background="@drawable/bg_rounded_dark_blue_bt"
        app:layout_constraintTop_toBottomOf="@id/edtv_password_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>